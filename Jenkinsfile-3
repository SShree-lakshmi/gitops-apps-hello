pipeline {
 agent any
  stages {

    stage('Build') {
      steps {
          withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
            sh "docker login -u ${USERNAME} -p ${PASSWORD}"
            sh "docker build --build-arg='BUILD_ID=${env.BUILD_ID}' --build-arg='GIT_COMMIT_ID=${env.GIT_COMMIT}'  -t brainupgrade/hello:${env.BUILD_ID} ."
            sh "docker push brainupgrade/hello:${env.BUILD_ID}"
            sh "kubectl set image deploy hello hello=brainupgrade/hello:${env.BUILD_ID}"
          }
        }
    }
  }
}
